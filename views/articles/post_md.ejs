<div class="br-head-container">
    <h1 ><%= title %></h1>
</div>
<hr>
<form class="form brpost-form-container" method="post"  enctype="multipart/form-data">
    <div class="form-group">
        <label>文件名</label>
        <input type="file" name="file" id="file-source">
        <p class="help-block">请提交不含HTML和Jabascript的Mardkown文档</p>
    </div>
    <div class="form-group">
        <label>标题</label>
        <input class="form-control" name="md_title" placeholder="默认标题为提交文件的文件名">
    </div>  
    <div class="form-group">
        <label>文章分类</label>
        <input class="form-control" name="md_catalog" placeholder="默认分类为未分类文章">
    </div>        
    <div class="form-group">
        <label>编译选项</label>
        <div>
            <input type="checkbox" name="md_options" value="1">选项一
            <input type="checkbox" name="md_options" value="2">选项二
            <input type="checkbox" name="md_options" value="3">选项三
            <input type="checkbox" name="md_options" value="4">选项四
        </div>
    </div>        
    <div class="form-group">
        <label>添加标签</label><br>
        <input class="form-control brpost-label" name="md_label" id="label-add-input">
        <button type="button" class="btn br-btn-org" id="label-add">+</button>
    </div>
    
    <hr>
    <input type="text" class="hide" id="upload-label" name="label_str">
    <div id="upload-submit">
        <button type="button" class="btn br-btn-org">提交</button>
    </div>
    <div class="br-info-container">
        <% if(md_success.length > 0){%>
            <div class="alert alert-success"><%= md_success %></div>
        <% } %>
        <% if(md_error.length > 0 ){ %>
            <div class="alert alert-warning"><%= md_error %></div>
        <% } %>
    </div>
</form>

<script src="/javascripts/upfile.js"></script>
<style type="text/css">
    .br-head-container > h1{
        color:#88c932;
    }
    .br-btn-org{
        background-color:rgba(255,146,36,.8);
        color:white;
    }
    .br-btn-org:hover,
    .br-btn-org:focus{
        background-color:rgba(255,146,36,1);
        color:white;
    }
    .br-info-container{
        margin:1em 0;
    }
    .brpost-label{
        display:inline-block;
        width:120px;
    }
    .brpost-form-container{
         width:750px;
    }
    .br-btn-margin{
        margin:0 .5em;
    }
</style>